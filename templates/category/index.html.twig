{% extends 'base.html.twig' %}

{% block title %}Collections{% endblock %}

{% block content %}
    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                {% for product in products %}
                    <div class="col">
                        <div class="card shadow-sm">
                            <img src="{{ asset('assets/uploads/'~product.image) }}" alt="{{ product.name }}" width="100%" height="250">
                            <div class="card-body">
                                <h3 class="card-text">{{ product.name }}</h3>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_product_details', {'slug':product.slug}) }}">Commander</a>
                                        <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_shop_cart') }}">Panier</a>
                                    </div>
                                    <small class="text-muted">{{ product.price }} FCFA</small>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- /END THE FEATURETTES -->
    </div><!-- /.container -->
{% endblock %}
